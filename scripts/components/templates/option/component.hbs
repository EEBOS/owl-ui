import * as React from 'react'
import { {{{optionCap}}}{{{cap}}}Props } from './{{{optionCap}}}.types'
import * as styles from './styles.module.scss'

const baseClass = 'owlui-{{{name}}}-{{{option}}}'

export const Component = (props: {{{optionCap}}}{{{cap}}}Props) => {
    const { children } = props

    let appearance = props.appearance
    let theme = props.theme
    let size = props.size

    if (appearance === undefined) {
        appearance = 'primary'
    }

    if (theme === undefined) {
        theme = 'default'
    }

    if (size === undefined) {
        size = 'medium'
    }

    return <div
        className={[
            styles.default[baseClass],
            styles.default[`${baseClass}_${appearance}`],
            styles.default[`${baseClass}_${theme}`],
            styles.default[`${baseClass}--${size}`]
        ].join(' ')}
    >{children}</div>
}

export default {
    Component
};