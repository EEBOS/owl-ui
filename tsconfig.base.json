{
    "compilerOptions": {
        "declaration": true,
        "target": "ESNEXT",
        "jsx": "react",
        "module": "CommonJS",
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "preserveConstEnums": true,
        "pretty": true,
        "stripInternal": true,
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "paths": {
            "@owlui/button": ["./packages/button/index.ts"],
            "@owlui/textfield": ["./packages/textfield/index.ts"]
        }
    },
    "exclude": [
        "node_modules"
    ]
  }